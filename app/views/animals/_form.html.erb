<%= form_for @animal do |f| %>

<%= f.label :name, class: "animal" %>
<%= f.text_field :name %>

<%= f.label :species %>
<%= f.text_field :species %>

<%= f.label :age %>
<%= f.text_field :age %>

<%= f.label :says %>
<%= f.text_area :says, size: "25x5" %>

<%= f.label :info %>
<%= f.text_area :info, size: "50x10" %>

<!-- <%= f.submit "Create" %> -->
<%= f.submit "Edit" %>
<%= f.submit "Delete" %>

<%= button_to "Home", animals_path, method: :get %>

<% end %>
